{
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "lineWidth": 120
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.13",
    "@std/fs": "jsr:@std/fs@^1.0.17"
  },
  "tasks": {
    "dprint": "deno run -A npm:dprint",
    "fmt:check": "deno task dprint check",
    "fmt:comments": "deno run -A ./tasks/fmt_comments.ts",
    "fmt": "deno task dprint fmt",
    "init": "deno task install-hooks",
    "install-hooks": "deno task lefthook install",
    "lefthook": "deno run -A --node-modules-dir=auto npm:lefthook"
  }
}
