{
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "lineWidth": 120
  },
  "tasks": {
    "cache-commitlint": "deno cache --node-modules-dir=auto npm:@commitlint/config-conventional",
    "commitlint": "deno run -A --node-modules-dir=auto npm:@commitlint/cli -g ./commitlint.json",
    "dprint": "deno run -A npm:dprint",
    "fmt:check": "deno task dprint check",
    "fmt": "deno task dprint fmt",
    "init": "deno task cache-commitlint && deno task install-hooks",
    "install-hooks": "deno task lefthook install",
    "lefthook": "deno run -A --node-modules-dir=auto npm:lefthook",
    "lint-staged": "deno run -A --node-modules-dir=auto npm:lint-staged -c ./lint_staged.json",
    "prompt": "deno run -A ./tasks/prompt.ts",
    "translate": "deno run -A ./tasks/translate.ts"
  }
}
